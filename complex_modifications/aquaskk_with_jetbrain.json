{
  "title": "AquaSKK for Jetbrain",
  "rules": [
    {
      "description": "Change input source to full width ascii mode by L (QWERTY)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.jetbrains\\..*"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^jp\\.sourceforge\\.inputmethod\\.aquaskk\\.FullWidthRoman$"
              },
              "modifiers": [
                "shift"
              ]
            }
          ]
        }
      ]
    },
