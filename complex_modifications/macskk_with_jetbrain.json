                {
                  "input_source_id": "^net\\.mtgto\\.inputmethod\\.macSKK\\.(ascii|hiragana|katakana|hankaku|eisu)$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "p"
          },
          "to": [
            {
              "select_input_source": {
                "language": "en",
                "input_source_id": "net.mtgto.inputmethod.macSKK.ascii",
                "input_mode_id": "com.apple.inputmethod.Roman"               
              }
            }
          ]
        }
      ]
    },
    {
