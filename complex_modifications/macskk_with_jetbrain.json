{
  "title": "macSKK for Jetbrain",
  "rules": [
    {
      "description": "Change input source to full width ascii mode by L (Dvorak)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.jetbrains\\..*"
              ],
              "type": "frontmost_application_if"
            },
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^net\\.mtgto\\.inputmethod\\.macSKK\\.(ascii|hiragana|katakana|hankaku|eisu)$"
                }
              ]
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ja",
                "input_source_id": "net.mtgto.inputmethod.macSKK.eisu",
                "input_mode_id": "com.apple.inputmethod.Japanese.FullWidthRoman"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Change input source to ascii mode by l (Dvorak)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.jetbrains\\..*"
              ],
              "type": "frontmost_application_if"
            },
            {
